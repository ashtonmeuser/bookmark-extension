{
  "name": "bookmark-extension",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build:background": "esbuild src/background.ts --bundle --format=esm --outfile=build/background.js --external:./content.js",
    "build:content": "esbuild src/content.ts --bundle --format=cjs --outfile=build/content.js --banner:js=\"export default async (id,bookmarks,css) => {\" --footer:js=\"};\"",
    "build:css": "esbuild src/style.css --outfile=build/style.min.css --minify",
    "build:static": "cp static/* build/",
    "build": "pnpm build:background && pnpm build:content && pnpm build:css && pnpm build:static"
  },
  "author": "ashtonmeuser",
  "license": "MIT",
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "esbuild": "^0.24.2"
  }
}
